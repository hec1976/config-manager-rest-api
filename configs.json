{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$comment": "Config Manager â€” configs.json (v1.7.5)",

  "nginx_conf": {
    "path": "/etc/nginx/nginx.conf",
    "category": "webserver",
    "service": "nginx",
    "actions": {
      "reload": [],
      "restart": ["--no-block"],
      "status": []
    },
    "user": "root",
    "group": "root",
    "mode": "0644",
    "apply_meta": true
  },

  "postfix_apphost": {
    "path": "/etc/postfix-in/main.cf",
    "category": "mail",
    "service": "exec:/usr/sbin/postmulti",
    "actions": {
      "reload": ["-i", "postfix-in", "-p", "reload"],
      "restart": ["-i", "postfix-in", "-p", "restart"],
      "status": ["-i", "postfix-in", "-p", "status"]
    },
    "user": "root",
    "group": "postfix",
    "mode": "0644",
    "apply_meta": true
  },

  "app_env": {
    "path": "/opt/configs/app.env",
    "category": "application",
    "service": "bash:/opt/scripts/restart_app.sh",
    "actions": {
      "run": []
    },
    "user": "appuser",
    "group": "appgroup",
    "mode": "0640",
    "apply_meta": true
  },

  "ssh_config": {
    "path": "/etc/ssh/sshd_config",
    "category": "security",
    "service": "sshd",
    "actions": {
      "restart": [],
      "status": []
    },
    "user": "root",
    "group": "root",
    "mode": "0600",
    "apply_meta": true
  }
}
